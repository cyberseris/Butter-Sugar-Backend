{
  "swagger": "2.0",
  "info": {
    "title": "Butter & Sugar",
    "description": "Butter & Sugar 烘焙影音課程平台",
    "version": "1.0.0"
  },
  "host": "buttersugar.zeabur.app",
  "basePath": "/",
  "schemes": ["https"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "請填寫 Bearer token，例如: Bearer {token}"
    }
  },
  "paths": {
    "/api/v1/users/auth/google": {
      "get": {
        "tags": ["User"],
        "summary": "Google 第三方登入",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/users/info": {
      "get": {
        "tags": ["User"],
        "summary": "取得使用者資料",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/users/check": {
      "get": {
        "tags": ["User"],
        "summary": "驗證使用者是否登入",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/users/update": {
      "patch": {
        "tags": ["User"],
        "summary": "更新使用者資料",
        "consumes": ["multipart/form-data"],
        "parameters": [
          { "name": "name", "in": "formData", "type": "string", "description": "使用者姓名" },
          { "name": "nickname", "in": "formData", "type": "string", "description": "暱稱" },
          { "name": "phone", "in": "formData", "type": "string", "description": "手機" },
          { "name": "birthday", "in": "formData", "type": "string", "description": "生日" },
          { "name": "sex", "in": "formData", "type": "string", "description": "性別" },
          { "name": "address", "in": "formData", "type": "string", "description": "地址" },
          { "name": "file", "in": "formData", "type": "file", "description": "頭像上傳（檔案）" }
        ],
        "responses": {
          "200": { "description": "成功更新使用者資料" },
          "400": { "description": "更新失敗，請稍後再試" },
          "404": { "description": "查無個人資料，請重新登入" }
        }
      }
    },
    "/api/v1/course/favorites/list": {
      "get": {
        "tags": ["User"],
        "summary": "取得收藏課程列表",
        "description": "取得目前使用者所有收藏的課程",
        "responses": {
          "200": {
            "description": "成功取得收藏課程列表"
          }
        }
      }
    },
    "/api/v1/course/favorites": {
      "post": {
        "tags": ["User"],
        "summary": "新增收藏課程",
        "description": "將指定課程加入收藏",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "course_id": { "type": "string", "example": "97ff5cbd-7cbd-4e47-ab8b-b5da0e0be89f" }
              },
              "required": ["course_id"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功加入收藏"
          }
        }
      }
    },
    "/api/v1/course/favorites/{favoriteId}": {
      "delete": {
        "tags": ["User"],
        "summary": "刪除收藏課程",
        "description": "依 favoriteId 刪除指定收藏",
        "parameters": [
          {
            "name": "favoriteId",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "收藏記錄ID"
          }
        ],
        "responses": {
          "200": {
            "description": "成功刪除收藏課程"
          }
        }
      }
    },
    "/api/v1/users/orders": {
      "get": {
        "tags": ["User"],
        "summary": "取得所有訂單",
        "description": "",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/api/v1/users/orders/{orderNumber}": {
      "get": {
        "tags": ["User"],
        "summary": "取得單一訂單",
        "description": "",
        "parameters": [{ "name": "orderNumber", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/api/v1/teacher/profile": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得教師資料",
        "description": "",
        "responses": {
          "default": { "description": "" }
        }
      },
      "patch": {
        "tags": ["Teacher"],
        "summary": "更新教師資料",
        "consumes": ["multipart/form-data"],
        "parameters": [
          { "name": "name", "in": "formData", "type": "string", "description": "姓名" },
          { "name": "nickname", "in": "formData", "type": "string", "description": "暱稱" },
          { "name": "phone", "in": "formData", "type": "string", "description": "手機" },
          { "name": "birthday", "in": "formData", "type": "string", "description": "生日" },
          { "name": "sex", "in": "formData", "type": "string", "description": "性別" },
          { "name": "address", "in": "formData", "type": "string", "description": "地址" },
          { "name": "bank_name", "in": "formData", "type": "string", "description": "銀行名稱" },
          { "name": "bank_account", "in": "formData", "type": "string", "description": "銀行帳號" },
          { "name": "slogan", "in": "formData", "type": "string", "description": "標語" },
          { "name": "description", "in": "formData", "type": "string", "description": "自我介紹" },
          { "name": "specialization", "in": "formData", "type": "string", "description": "專長" },
          { "name": "file", "in": "formData", "type": "file", "description": "頭像上傳（檔案）" }
        ],
        "responses": {
          "200": { "description": "成功更新老師資料" },
          "400": { "description": "更新失敗，請稍後再試" },
          "404": { "description": "查無資料，請重新登入" }
        }
      }
    },
    "/api/v1/teacher/featured": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得精選教師資料",
        "description": "",
        "responses": {
          "default": { "description": "" }
        }
      }
    },
    "/api/v1/teacher/{teacherId}": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得單一精選教師",
        "description": "",
        "parameters": [{ "name": "teacherId", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "default": { "description": "" }
        }
      }
    },
    "/api/v1/teacher/teacherCourse": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得教師開設的課程列表",
        "description": "取得目前登入教師所開設的課程，支援分頁",
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "description": "分頁的頁碼，預設為 1",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "成功取得教師課程列表",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "/api/v1/teacher-applications": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得教師審核資料（個人）",
        "description": "取得目前登入使用者的所有教師申請資料。",
        "responses": {
          "200": {
            "description": "取得教師審核資料成功",
            "schema": {
              "type": "array"
            }
          },
          "401": { "description": "未授權" }
        }
      },
      "post": {
        "tags": ["Teacher"],
        "summary": "申請成為教師",
        "description": "申請成為教師，提交課程名稱與說明。",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["course_name", "description"],
              "properties": {
                "course_name": {
                  "type": "string",
                  "example": "乳酪濃郁！日式巴斯克蛋糕入門課",
                  "description": "欲開課之名稱"
                },
                "description": {
                  "type": "string",
                  "example": "課程介紹日式巴斯克乳酪蛋糕的經典與變化：原味、抹茶、焦糖海鹽等多種版本。重點說明乳酪選擇、烘烤溫度、如何做出濕潤綿密的理想口感，以及切片保存等實用技巧。",
                  "description": "申請說明"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "申請教師成功"
          },
          "400": { "description": "申請失敗" }
        }
      }
    },
    "/api/v1/teacher-applications/{applicationId}": {
      "patch": {
        "tags": ["Teacher"],
        "summary": "修改教師審核資料",
        "description": "修改已送出的教師申請資料（僅限尚未審核通過或退件）。",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "教師申請資料ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "course_name": {
                  "type": "string",
                  "example": "乳酪濃郁！日式巴斯克蛋糕入門課2",
                  "description": "欲開課之名稱"
                },
                "description": {
                  "type": "string",
                  "example": "課程介紹日式巴斯克乳酪蛋糕的經典與變化：原味、抹茶、焦糖海鹽等多種版本。重點說明乳酪選擇、烘烤溫度、如何做出濕潤綿密的理想口感，以及切片保存等實用技巧。",
                  "description": "申請說明"
                }
              },
              "required": ["course_name", "description"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "修改教師審核資料成功"
          },
          "400": { "description": "修改失敗" }
        }
      }
    },
    "/api/v1/teacher/revenue": {
      "get": {
        "tags": ["Teacher"],
        "summary": "取得教師收益報表",
        "description": "取得當前登入教師的總收益資訊。",
        "parameters": [],
        "responses": {
          "200": {
            "description": "取得成功",
            "schema": {
              "type": "object",
              "properties": {
                "total_revenue": {
                  "type": "integer",
                  "description": "總收益（未扣除手續費）"
                },
                "rating_score": {
                  "type": "number",
                  "format": "float",
                  "description": "教師評價"
                },
                "sales_count": {
                  "type": "integer",
                  "description": "銷售課程數"
                },
                "opened_course_count": {
                  "type": "integer",
                  "description": "開設課程數"
                },
                "course_name": {
                  "type": "string",
                  "description": "課程名稱"
                },
                "course_price": {
                  "type": "integer",
                  "description": "課程金額"
                },
                "service_fee": {
                  "type": "integer",
                  "description": "手續費"
                },
                "revenue_net": {
                  "type": "integer",
                  "description": "淨收益"
                },
                "total_students": {
                  "type": "integer",
                  "description": "學生數"
                }
              }
            }
          },
          "401": { "description": "未登入" }
        }
      }
    },
    "/api/v1/admin/teacher-applications": {
      "get": {
        "tags": ["Admin"],
        "summary": "取得所有教師申請資料",
        "description": "（管理者）取得所有教師申請資料。",
        "responses": {
          "200": {
            "description": "取得成功",
            "schema": {
              "type": "array"
            }
          },
          "401": { "description": "未授權" }
        }
      }
    },
    "/api/v1/admin/teacher-applications/{applicationId}": {
      "get": {
        "tags": ["Admin"],
        "summary": "取得單一教師申請資料",
        "description": "（管理者）根據申請ID取得單一教師申請資料。",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "教師申請資料ID"
          }
        ],
        "responses": {
          "200": {
            "description": "取得成功"
          },
          "404": { "description": "查無此資料" }
        }
      }
    },
    "/api/v1/admin/teacher-applications/{applicationId}/status": {
      "patch": {
        "tags": ["Admin"],
        "summary": "審核教師申請",
        "description": "（管理者）審核教師申請，可設為 approved/rejected。",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "教師申請資料ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": ["approved", "rejected"],
                  "example": "approved",
                  "description": "審核狀態"
                }
              },
              "required": ["status"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "審核狀態已更新"
          },
          "400": { "description": "審核失敗" }
        }
      }
    },
    "/api/v1/admin/system-log": {
      "get": {
        "tags": ["Admin"],
        "summary": "取得系統日誌(目前只紀錄登入後的動作)",
        "description": "可依 pageNum、keyword（支援 user_id、role、action、api、sys_module、email、status、時間）搜尋系統日誌。",
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "required": false,
            "type": "integer",
            "default": 1,
            "description": "分頁頁碼"
          },
          {
            "name": "keyword",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "可依 user_id、role、action、api、sys_module、email、status、時間搜尋"
          }
        ],
        "responses": {
          "200": {
            "description": "取得系統日誌成功",
            "schema": {
              "type": "object",
              "properties": {
                "systemLogList": {
                  "type": "array"
                },
                "total": { "type": "integer", "example": 100 }
              }
            }
          }
        }
      }
    },
    "/api/v1/course/my-courses": {
      "get": {
        "tags": ["My-Courses"],
        "summary": "取得我的課程列表",
        "description": "取得目前使用者已購買或擁有的課程列表",
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "description": "分頁的頁碼，預設為 1",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "成功取得我的課程列表",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "/api/v1/course/subsections/{subsectionId}/progress": {
      "post": {
        "tags": ["My-Courses"],
        "summary": "新增章節進度",
        "description": "新增（建立）某個章節（subsection）的學習進度，例如學習開始。",
        "parameters": [
          {
            "name": "subsectionId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "小節（subsection）ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": ["in_progress", "completed"],
                  "example": "in_progress",
                  "description": "進度狀態"
                }
              },
              "required": ["status"]
            }
          }
        ],
        "responses": {
          "200": { "description": "新增進度成功" },
          "400": { "description": "新增進度失敗" }
        }
      },
      "patch": {
        "tags": ["My-Courses"],
        "summary": "標記章節進度",
        "description": "更新指定小節（subsection）的學習進度狀態與觀看時間。",
        "parameters": [
          {
            "name": "subsectionId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "小節（subsection）ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": ["in_progress", "completed"],
                  "example": "completed",
                  "description": "進度狀態"
                },
                "watched_time": {
                  "type": "integer",
                  "example": 5,
                  "description": "已觀看時間（單位：分鐘或秒，請根據你的實作調整）"
                }
              },
              "required": ["status"]
            }
          }
        ],
        "responses": {
          "200": { "description": "進度已更新" },
          "400": { "description": "更新失敗" }
        }
      }
    },
    "/api/v1/course/popular": {
      "get": {
        "tags": ["Courses"],
        "summary": "取得首頁熱門課程資料",
        "description": "取得依熱門程度排序的課程列表，支援分頁",
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "description": "分頁的頁碼，預設為 1",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "成功取得熱門課程資料",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          },
          "default": {
            "description": "其他錯誤"
          }
        }
      }
    },
    "/api/v1/course/list": {
      "get": {
        "tags": ["Courses"],
        "summary": "取得課程",
        "description": "取得所有課程",
        "parameters": [
          {
            "name": "pageNum",
            "in": "query",
            "description": "分頁的頁碼，預設為 1",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "取得課程列表成功",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "/api/v1/course/category": {
      "get": {
        "tags": ["Courses"],
        "summary": "取得課程分類列表",
        "description": "取得所有課程分類（如麵包、蛋糕、餅乾等）",
        "responses": {
          "200": {
            "description": "成功取得分類清單",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "aabbccdd-1122-3344-5566-77889900" },
                  "name": { "type": "string", "example": "麵包" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/course/{courseId}/ratings": {
      "post": {
        "tags": ["Courses"],
        "summary": "新增評價",
        "description": "新增一筆評價到指定課程。",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "課程 ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["rating_score", "review_text"],
              "properties": {
                "rating_score": { "type": "integer", "example": 5, "description": "評分（1~5）" },
                "review_text": {
                  "type": "string",
                  "example": "手工餅乾很好吃，會持續練習！",
                  "description": "評論文字"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "更新評價成功",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "boolean", "example": true },
                "message": { "type": "string", "example": "更新評價成功" },
                "data": {
                  "type": "object",
                  "properties": {
                    "user_id": {
                      "type": "string",
                      "example": "ee0756a2-0add-4092-9b04-14a32183e8f6"
                    },
